<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.slides.OtherSlideFragment">

    <TextView
        android:id="@+id/slideTitle"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="24dp"

        style="@style/AppSlideTitle"
        android:textAlignment="center"

        android:text="@string/other_reports_category_title"/>

    <LinearLayout
        android:id="@+id/issueList"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/slideTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="24dp"

        android:orientation="vertical"
        >

        <CheckBox
            android:id="@+id/basketballGoalCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layoutDirection="rtl"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="4dp"

            android:background="@drawable/category_background"
            android:text="@string/basketball_goal_report"/>

        <CheckBox
            android:id="@+id/equipmentStorageCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layoutDirection="rtl"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="4dp"

            android:background="@drawable/category_background"
            android:text="@string/equipment_storage_report"/>

        <CheckBox
            android:id="@+id/vacantLotCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layoutDirection="rtl"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="4dp"

            android:background="@drawable/category_background"
            android:text="@string/vacant_lot_report"/>

        <CheckBox
            android:id="@+id/busStopCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layoutDirection="rtl"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="4dp"

            android:background="@drawable/category_background"
            android:text="@string/bus_stop_report"/>

        <CheckBox
            android:id="@+id/benchmarkCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layoutDirection="rtl"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="4dp"

            android:background="@drawable/category_background"
            android:text="@string/benchmark_report"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>